<Window x:Class="Sharey.TaskAdding"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:gifLib="clr-namespace:GifImageLib"
        Title="正在处理中" Width="500" Height="180"  WindowStyle="None" AllowsTransparency="True"  Topmost="True"  Icon="Skin\Icon\Share.ico" Background="White" BorderThickness="1" BorderBrush="#98cafc" Opacity="0.9">
    <Grid  VerticalAlignment="Center">

        <Grid.RowDefinitions>
            <RowDefinition Height="72"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>

        <gifLib:GifImage Source="Skin/Images/loading.gif" Stretch="Uniform"  Width="72" Height="72"/>
        <Label Name="lbTip"  Grid.Row="1"  HorizontalAlignment="Center"  VerticalAlignment="Top" Width="auto" FontSize="14" Foreground="#1257f2" Padding="0 15"/>

    </Grid>
</Window>
